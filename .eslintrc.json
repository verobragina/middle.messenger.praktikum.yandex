{
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": ["eslint:recommended", "google"],
  "rules": {
    "max-len": [2, 100],
    "max-params": [2, 3],
    "no-var": "error",
    "no-multi-spaces": "error",
    "require-jsdoc": "off"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "plugins": [
    "@typescript-eslint"
  ]
}
